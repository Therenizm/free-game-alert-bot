import json
import requests
import asyncio
import schedule
import nest_asyncio
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

nest_asyncio.apply()  

TOKEN = "YOUR_TOKEN"  # Bot tokenÄ±nÄ± buraya ekle

